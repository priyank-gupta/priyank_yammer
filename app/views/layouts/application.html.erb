<!DOCTYPE html>
<html>
<head>
  <title>PriyankYammer</title>
  <%= stylesheet_link_tag :all %>
  <%#= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div id = "header">
    <h1 style ="margin:0px">Yammer</h1>
    <% if current_user %>
      <p style = "float:right;margin:0">Hi! <%= current_user.email %></p><br/>
      <div id = "nav1">
        <% if current_user.user_type == "admin" %>
          <span><%= link_to "All Users", users_path %> |
          <span><%= link_to "Add User", new_user_path %></span> | 
        <% end %>
      <span><%= link_to "LogOut", destroy_user_session_path %></span>
      </div><br />
    <% end %>
  </div>
  <div id = "main_body">
    <% if current_user %>
      <div id = "leftside" style = "padding-right:50px">
        <%= link_to "Feeds", feeds_path %><br /><br />
        <%= link_to "My Profile", my_profile_path %>
      </div>
    <% end %>
    <div id = "rightside">
      <%= yield %>
    </div><br/>
  </div>
  <div id = "footer">
  
  </div>
</body>
</html>
